# ==========================================
# Autonova RMM - Environment Configuration
# ==========================================
# Copy this file to each project folder and rename to .env
# Configure these values before running

# ===================
# Cloud Server Config
# ===================
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Database
DATABASE_URL=sqlite+aiosqlite:///./autonova.db

# Redis (optional, for scaling)
REDIS_URL=redis://localhost:6379

# JWT Security (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=autonova-jwt-secret-change-in-production-12345
JWT_ALGORITHM=HS256

# Encryption Key (MUST MATCH CLIENT!)
ENCRYPTION_KEY=autonova-rmm-secret-key-change-me-12345

# ===================
# Client Agent Config
# ===================
AUTONOVA_SERVER=ws://localhost:8000
AUTONOVA_KEY=autonova-rmm-secret-key-change-me-12345

# ===================
# Admin PWA Config
# ===================
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000
